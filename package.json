{
  "name": "plz-dont-crush",
  "version": "0.0.1",
  "description": "Recruitment task for Dev & Deliver",
  "author": "Bartosz Rak",
  "license": "MIT",
  "engines": {
    "node": ">=14.15.1"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:generate": "ts-node --transpile-only -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -n",
    "migration:run": "ts-node --transpile-only -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run",
    "migration:run:prod": "typeorm migration:run -f ormconfig.prod.js",
    "migration:revert": "ts-node --transpile-only -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert",
    "migration:new": "ts-node --transpile-only -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:create -n"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.6.5",
    "@nestjs/config": "^0.6.1",
    "@nestjs/core": "^7.6.5",
    "@nestjs/cqrs": "^7.0.1",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.5",
    "@nestjs/swagger": "^4.7.10",
    "@nestjs/typeorm": "^7.1.5",
    "@types/cache-manager": "^2.10.3",
    "@types/redis": "^2.8.28",
    "bcrypt": "^5.0.0",
    "cache-manager": "^3.4.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.13.0",
    "express-basic-auth": "^1.2.0",
    "fp-ts": "^2.9.3",
    "helmet": "^4.3.1",
    "http-status": "^1.5.0",
    "joi": "^17.3.0",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "pg": "^8.5.1",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "swagger-ui-express": "^4.1.6",
    "tiny-types": "^1.15.0",
    "typeorm": "^0.2.30",
    "uid-generator": "^2.0.0",
    "utility-types": "^3.10.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.9.0",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.1",
    "@types/http-status": "^1.1.2",
    "@types/jest": "^24.0.18",
    "@types/joi": "^14.3.4",
    "@types/node": "^12.7.5",
    "@types/passport-http-bearer": "^1.0.36",
    "@types/supertest": "^2.0.8",
    "@types/uid-generator": "^2.0.2",
    "cross-env": "^7.0.3",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@main/(.*)$": "<rootDir>/$1"
    }
  }
}
